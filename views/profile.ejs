<!-- profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="../public/profile.css"> <!-- Link to your CSS file -->
</head>
<body>
    <header>
        <h1>Welcome, <%= user.username %>!</h1>
        <a href="/logout">Logout</a> <!-- Link to logout functionality -->
    </header>
    <main>
        <section class="profile-info">
            <h2>Your Profile</h2>
            <ul>
                <li><strong>Username:</strong> <%= user.username %></li>
                <li><strong>Email:</strong> <%= user.email %></li>
                <!-- Add more profile information here -->
            </ul>
            <a href="/edit-profile">Edit Profile</a> <!-- Link to edit profile page -->
        </section>
        <section class="booking-history">
            <h2>Booking History</h2>
            <% if (user.bookings.length > 0) { %>
                <ul>
                    <% user.bookings.forEach((booking) => { %>
                        <li><%= booking.name %> - <%= booking.date %></li>
                        <!-- Display booked tours -->
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No bookings yet.</p>
            <% } %>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Astro Tours</p>
    </footer>
</body>
</html>
